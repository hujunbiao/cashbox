    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "attach",
            "name": "android_lldb",
            // "cwd": "${workspaceFolder}",
            // "relativePathBase":"${workspaceFolder}",
            "sourceMap": {"D:/scryinfo/cashbox/bc":"D:/gopath/src/github.com/scryinfo/cashbox/bc"},
            "pid": "15208", //use ${command:pickProcess} to pick other users' processes
            "sourceLanguages": ["rust"],
            "initCommands": [
                "platform select remote-android",
                "platform connect unix-abstract-connect:///sdcard/debug.sock"],
            "postRunCommands": [
                // "add-dsym D:/gopath/src/github.com/scryinfo/cashbox/bc/target/aarch64-linux-android/debug/libwallet.so"
                // "add-dsym D:/scryinfo/cashbox/packages/wallet_manager/android/src/main/jniLibs/arm64-v8a/libwallet.so"
                ],

        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in library 'ethtx'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--lib",
                    "--package=ethtx"
                ],
                "filter": {
                    "name": "ethtx",
                    "kind": "lib"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}